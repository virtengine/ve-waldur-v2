#!/bin/bash
set -e

echo "INFO: Running Celery Worker..."
source /etc/waldur/celery.conf
mkdir -p /run/waldur/celery
chown -R waldur:waldur /run/waldur/celery
gosu waldur sh -c "celery -A $CELERY_APP worker --concurrency=$CELERYD_CONCURRENCY --loglevel=$CELERYD_LOG_LEVEL --logfile=$CELERYD_LOG_FILE --pidfile=$CELERYD_PID_FILE $CELERYD_OPTS"

exit 0
